<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10px"
    android:layout_marginTop="10px" >

    <TextView
        android:id="@+id/sensorlist_tv_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40px"
        android:layout_marginTop="10px"
        android:text="TextView"
        android:textColor="@color/font_sensorlist_station"
        android:textSize="50px" />

    <TextView
        android:id="@+id/sensorlist_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sensorlist_tv_station"
        android:layout_below="@+id/sensorlist_tv_station"
        android:layout_marginTop="10px"
        android:text="TextView"
        android:textColor="@color/font_sensorlist_address" />

    <TextView
        android:id="@+id/sensorlist_tv_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sensorlist_tv_address"
         android:textColor="@color/font_sensorlist_address" 
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/sensorlist_tv_address"
        android:layout_marginLeft="41px"
        android:layout_marginTop="20px"
        android:background="@color/view_bg" />

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_right" />

</RelativeLayout>